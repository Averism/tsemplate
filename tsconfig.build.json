{
    "compilerOptions": {
      "noImplicitAny": true,
      "target": "es6",
      "outDir": "build",
      "sourceMap": false,
      "moduleResolution": "node",
      "pretty": false,
      "esModuleInterop": true,
      "module": "commonjs",
    },
    "include": [
      "src/**/*",
      "index.ts",
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ],
    "compileOnSave": true,
    "lib": ["es2017", "es6"]
  }