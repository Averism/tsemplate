{
    "compilerOptions": {
        "noImplicitAny": true,
        "target": "es6",
        "outDir": "temp",
        "sourceMap": true,
        "moduleResolution": "node",
        "pretty": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "lib": [
            "es2017",
            "es6",
